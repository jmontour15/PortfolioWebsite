{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2"
  },
  "scripts": {
  "build:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
  "serve": "live-server src",
  "dev": "concurrently \"npm run build:css\" \"npm run serve\""
  }
}